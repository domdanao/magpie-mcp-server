  "homepage": "https://github.com/domdanao/magpie-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domdanao/magpie-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/domdanao/magpie-mcp-server/issues"
  },
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
